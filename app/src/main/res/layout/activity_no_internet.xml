<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackerkernel.blooddonar.activity.NoInternetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:id="@+id/linear_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_white_no_wifi"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Internet Connection"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:id="@+id/connection_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_tryAgain"
        android:layout_below="@+id/connection_text"
        android:layout_marginTop="10dp"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Need Help? Contact Us."
    android:textColor="@color/colorAccent"
    android:layout_below="@+id/button_tryAgain"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    android:id="@+id/need_help_textview"
        style="@style/Base.TextAppearance.AppCompat.Headline"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9926458745"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/need_help_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/contact_us_textView1"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7787854789"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/contact_us_textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/contact_us_textView2"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>



</RelativeLayout>
