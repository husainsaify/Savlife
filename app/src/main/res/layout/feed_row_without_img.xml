<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/feed_person_image"
            android:src="@drawable/bloodman"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anurag Sahu"
            android:layout_toRightOf="@+id/feed_person_image"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="5dp"
            android:id="@+id/feed_person_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_time"
            android:text="1 Hour Ago"
            android:layout_below="@+id/feed_person_name"
            android:layout_toRightOf="@+id/feed_person_image"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_status"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_below="@+id/feed_person_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="I have donated blood congrats"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>